{% extends 'admin/base.html.twig' %}

{% block title %}Hello RecetteController!
{% endblock %}

{% block body %}
<main>
	<h1>Nos recettes</h1>

	<a href={{path('admin_recipe_create')}} class="btn btn-outline-secondary">Ajouter une nouvelle recette</a>

	<table class="table table-success table-striped">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Temps</th>
				<th>Personnes</th>
				<th>Difficult√©</th>
				<th>Etape</th>
				<th>Prix</th>
				<th>Modifier</th>
				<th>Supprimer</th>
				<th>Image</th>

			</tr>
		</thead>
		{% for recipe  in recipe_form %}

			<tr>
				<td>
				<a href={{path('admin_recipe_show',{'slug': recipe.slug} )}}  class="btn btn-outline-secondary" >{{recipe.name}}</a>
				</td>
				<td>{{recipe.time}}</td>
				<td>{{recipe.people}}</td>
				<td>{{recipe.difficulty}}</td>
				<td>{{recipe.step}}</td>
				<td>{{recipe.price}}</td>

				<td>
					<a href={{path('admin_recipe_update',{'slug': recipe.slug})}} class="btn btn-outline-secondary">Modifier</a>
				</td>
		<td>
                        <form action={{path('admin_recipe_delete',{'id':recipe.id} )}} method='POST'>
                        <input type="hidden" name='_method' value='DELETE'>
                        <button type='submit' class="btn btn-outline-secondary">Supprimer</button>
                        </form>

                    </td>
				<td>
					<img src="{{asset('img/FileName/') ~ recipe.FileName}}" alt="">
					<a href={{path('admin_recipe_update',{'slug': recipe.slug})}} class="btn btn-outline-secondary" >Ajouter une image</a>
				</td>
			</tr>
	

	</td>

</tr>{% endfor %}</table></main>{% endblock %}
